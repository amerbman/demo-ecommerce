{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    // ─── Add these two ───────────────────────────────────────
    "typeRoots": ["types", "node_modules/@types"],
    "types": ["nprogress"]
    // ────────────────────────────────────────────────────────
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    // ── Make sure your custom declarations get picked up:
    "types/**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}
